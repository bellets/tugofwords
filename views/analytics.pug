doctype html
title  {Tug of Words }
meta(charset='UTF-8')
meta(name='viewport', content='width=device-width, initial-scale=1')
link(rel='stylesheet', href='https://www.w3schools.com/w3css/4/w3.css')
link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Lato')
link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css')
style.
  body,
  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
  font-family: "Lato", sans-serif;
  }
  body,
  html {
  height: 100%;
  color: #777;
  line-height: 1.8;
  }
  .bgimg-1,
  .bgimg-2,
  .bgimg-3 {
  background-attachment: fixed;
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
  }
  /* First image (Logo. Full height) */
  .bgimg-1 {
  background-image: url('https://edkentmedia.com/wp-content/uploads/2018/02/web-marketing-analytics.jpg');
  min-height: 100%;
  }
  .w3-wide {
  letter-spacing: 10px;
  }
  .w3-hover-opacity {
  cursor: pointer;
  }
  /* Turn off parallax scrolling for tablets and phones */
  @media only screen and (max-device-width: 1600px) {
  .bgimg-1,
  .bgimg-2,
  .bgimg-3 {
  background-attachment: scroll;
  min-height: 400px;
  }
  }
  .test123 {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  }
// Navbar (sit on top)
.w3-top
  #myNavbar.w3-bar
    a.w3-bar-item.w3-button.w3-hover-black.w3-hide-medium.w3-hide-large.w3-right(href='javascript:void(0);', onclick='toggleFunction()', title='Toggle Navigation Menu')
      i.fa.fa-bars
    a.w3-bar-item.w3-button(href='https://tugofwords.appspot.com/') HOME
    a.w3-bar-item.w3-button.w3-hide-small.w3-right.w3-hover-red(href='#')
      i.fa.fa-search
  // Navbar on small screens
  #navDemo.w3-bar-block.w3-white.w3-hide.w3-hide-large.w3-hide-medium
    a.w3-bar-item.w3-button(href='#about', onclick='toggleFunction()') ABOUT
    a.w3-bar-item.w3-button(href='#portfolio', onclick='toggleFunction()') ANALYTICS
    a.w3-bar-item.w3-button(href='#contact', onclick='toggleFunction()') CONTACT 
    a.w3-bar-item.w3-button(href='#') SEARCH
// First Parallax Image with Logo Text
#home.bgimg-1.w3-display-container.w3-opacity-min
  .w3-display-middle(align='center', style='white-space:nowrap;')
    span.w3-center.w3-padding-large.w3-black.w3-xlarge.w3-wide.w3-animate-opacity  Analytics
// Container (Results Section)
#about.w3-content.w3-container.w3-padding-32
  .w3-row.w3-center.w3-padding-16   
    span.w3-xxxlarge #{conversation_turns}
    br
    strong Total Conversation Turns 
    .w3-row.w3-center.w3-padding-16
      p
        | At this rate, you are on track for 
        span.w3-large  2000
        |  turns per day. The recommended amount of conversation turns is 
        strong  400 
        |  per day.
  .w3-row.w3-center.w3-light-grey.w3-padding-16
    h3.w3-center  Additional Results 
    .w3-third.w3-section
      span.w3-xlarge #{recording_length}
      |   min
      br
      |  Recording Length
    .w3-third.w3-section
      span.w3-xlarge  #{turn_rate} 
      |   turns/hr 
      br
      |  Turn Rate
    .w3-third.w3-section
      span.w3-xlarge #{speech_content}
      |   min
      br
      |  Total Detected Speech
// Footer
footer.w3-center.w3-black.w3-padding-64.w3-opacity.w3-hover-opacity-off
  a.w3-button.w3-light-grey(href='#home')
    i.fa.fa-arrow-up.w3-margin-right
    | To the top
  br
  br
  img(src='https://i.ibb.co/zHG1ZN9/Logo.png', alt='logo', height='55', width='75')
script.
  // Change style of navbar on scroll
  window.onscroll = function() {
  myFunction()
  };
  function myFunction() {
  var navbar = document.getElementById("myNavbar");
  if (document.body.scrollTop > 100 || document.documentElement.scrollTop > 100) {
  navbar.className = "w3-bar" + " w3-card" + " w3-animate-top" + " w3-white";
  } else {
  navbar.className = navbar.className.replace(" w3-card w3-animate-top w3-white", "");
  }
  }
  // Used to toggle the menu on small screens when clicking on the menu button
  function toggleFunction() {
  var x = document.getElementById("navDemo");
  if (x.className.indexOf("w3-show") == -1) {
  x.className += " w3-show";
  } else {
  x.className = x.className.replace(" w3-show", "");
  }
  }
