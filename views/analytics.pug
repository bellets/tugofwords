doctype html
title  {Tug of Words }
meta(charset='UTF-8')
meta(name='viewport' content='width=device-width, initial-scale=1')
link(rel='stylesheet' href='https://www.w3schools.com/w3css/4/w3.css')
link(rel='stylesheet' href='https://fonts.googleapis.com/css?family=Lato')
link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css')
style.
  body,
  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
  font-family: "Lato", sans-serif;
  }
  body,
  html {
  height: 100%;
  color: #777;
  line-height: 1.8;
  }
  .bgimg-1,
  .bgimg-2,
  .bgimg-3 {
  background-attachment: fixed;
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
  }
  /* First image (Logo. Full height) */
  .bgimg-1 {
  background-image: url('https://edkentmedia.com/wp-content/uploads/2018/02/web-marketing-analytics.jpg');
  min-height: 100%;
  }
  .w3-wide {
  letter-spacing: 10px;
  }
  .w3-hover-opacity {
  cursor: pointer;
  }
  /* Turn off parallax scrolling for tablets and phones */
  @media only screen and (max-device-width: 1600px) {
  .bgimg-1,
  .bgimg-2,
  .bgimg-3 {
  background-attachment: scroll;
  min-height: 400px;
  }
  }
// Navbar (sit on top)
.w3-top
  #myNavbar.w3-bar
    a.w3-bar-item.w3-button.w3-hover-black.w3-hide-medium.w3-hide-large.w3-right(href='javascript:void(0);' onclick='toggleFunction()' title='Toggle Navigation Menu')
      i.fa.fa-bars
    a.w3-bar-item.w3-button(href='#home') HOME
    a.w3-bar-item.w3-button.w3-hide-small(href='#about')  ABOUT
    a.w3-bar-item.w3-button.w3-hide-small(href='#analytics') ANALYTICS
    a.w3-bar-item.w3-button.w3-hide-small(href='#contact')  CONTACT
    a.w3-bar-item.w3-button.w3-hide-small.w3-right.w3-hover-red(href='#')
      i.fa.fa-search
  // Navbar on small screens
  #navDemo.w3-bar-block.w3-white.w3-hide.w3-hide-large.w3-hide-medium
    a.w3-bar-item.w3-button(href='#about' onclick='toggleFunction()') ABOUT
    a.w3-bar-item.w3-button(href='#portfolio' onclick='toggleFunction()') ANALYTICS
    a.w3-bar-item.w3-button(href='#contact' onclick='toggleFunction()') CONTACT 
    a.w3-bar-item.w3-button(href='#') SEARCH
